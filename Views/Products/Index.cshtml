@model IEnumerable<LaboGrocery.Models.Product>
    @{
    ViewData["Title"] = "Produits";
    }

    <div class="container my-5">
        <h1 class="display-5 mb-2">Bienvenue</h1>
        <p class="text-muted mb-4">C’est la meilleure option</p>

        <!-- Filtros por categoría (opcional) -->
        <div class="category-pills mb-4">
            <a asp-action="Index" class="btn btn-sm btn-outline-primary me-2 @(string.IsNullOrEmpty((string)ViewBag.Category) ? "active" : "")">All</a>
            @foreach (var cat in (IEnumerable<LaboGrocery.Models.Category>)ViewBag.Categories ?? Enumerable.Empty<LaboGrocery.Models.Category>())
        {
            <a asp-action="Index" asp-route-category="@cat.Id" class="btn btn-sm btn-outline-primary me-2 @(ViewBag.Category == cat.Id ? "active" : "")">
                @cat.Name
            </a>
        }
        </div>

        <div class="row g-4">
            @foreach (var item in Model)
        {
            var img = Url.Content($"~/images/products/{item.Id}.jpg"); // 1.jpg, 2.jpg...
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card product-card h-100">
                    <img class="product-img" src="@img" alt="@item.Name"
                         onerror="this.onerror=null;this.src='/images/placeholder.svg';" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="text-muted mb-3">@item.Price.ToString("C")</p>

                        <div class="mt-auto d-grid gap-2">
                            <a class="btn btn-primary"
                               asp-controller="Products"
                               asp-action="Details"
                               asp-route-id="@item.Id">
                                <i class="bi bi-eye"></i> View
                            </a>

                            <form asp-controller="Cart" asp-action="Add" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button class="btn btn-outline-primary" type="submit">
                                    <i class="bi bi-bag-plus"></i> Add to cart
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
