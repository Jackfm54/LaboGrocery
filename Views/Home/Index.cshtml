@{
    ViewData["Title"] = "Accueil";
    var categories = (IEnumerable<Category>)ViewBag.Categories;
}
<div class="row mb-4">
    <div class="col">
        <h1>@L["Bienvenue"]</h1>
        <p class="text-muted">@L["C'est la meullieur option"]</p>
    </div>
</div>

<div class="row mb-3">
    <div class="col-12">
        <div class="btn-group">
            <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index">@L["All"]</a>
            @foreach (var c in categories)
            {
            <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index" asp-route-categoryId="@c.Id">@c.Name</a>
            }
        </div>
    </div>
</div>

<div class="row g-3">
    @foreach (var p in Model)
{
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card h-100">
            <img class="card-img-top" src="@(p.ImagePath ?? "/images/placeholder.png")" alt="@p.Name" />
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@p.Name</h5>
                <p class="card-text text-muted">@p.Price.ToString("C")</p>
                <a class="btn btn-primary mt-auto" asp-controller="Products" asp-action="Details" asp-route-id="@p.Id">@L["View"]</a>
            </div>
        </div>
    </div>
}
</div>
